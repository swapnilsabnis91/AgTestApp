<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7fdff">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7fdff"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rv_top_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:gravity="center_horizontal">


            <ImageView
                android:id="@+id/imgAppLogo"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:visibility="visible"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_instructions"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgAppLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/select_login_method"
                android:textColor="#363c81"
                android:textSize="17sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_button"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="----------------- OR -----------------"
                android:textColor="#484041" />

            <TextView
                android:id="@+id/tv_or_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sign_in_button"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="----------------- OR -----------------"
                android:textColor="#484041" />


            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/tv_instructions"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:minWidth="100dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold|italic" />


            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/tv_or"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:minWidth="100dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <com.twitter.sdk.android.core.identity.TwitterLoginButton
                android:id="@+id/twitterLoginButton"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@id/tv_or_second"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:minWidth="100dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold|italic" />
        </RelativeLayout>


    </RelativeLayout>
</ScrollView>